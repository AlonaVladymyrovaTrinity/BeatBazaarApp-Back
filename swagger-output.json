            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "John Doe"
                },
                "email": {
                  "type": "string",
                  "example": "jdoe@example.com"
                },
                "password": {
                  "type": "string",
                  "example": "supersecretpassword"
                },
                "username": {
                  "type": "string",
                  "example": "jdoe99"
                }
              },
              "required": ["name", "email", "password", "username"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User registered successfully",
